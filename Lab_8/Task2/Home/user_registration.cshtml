@{
    ViewData["Title"] = "Registration";
}
<div>
    @using (Html.BeginForm())
    {
        @Html.Label("Name: ")
        @Html.TextBox("Name")
        <br /><br />

        @Html.Label("Email: ")
        @Html.TextBox("Email", "", new { type = "email" })
        <br /><br />

        @Html.Label("Password: ")
        @Html.Password("Password")
        <br /><br />

        @Html.Label("Confirm Password: ")
        @Html.Password("ConfirmPassword")
        <br /><br />

        @Html.Label("Phone number: ")
        @Html.TextBox("PhoneNo")
        <br /><br />

        @Html.Label("Gender: ")<br />
        @Html.RadioButton("Gender", "Male")<span> Male</span><br>
        @Html.RadioButton("Gender", "Female")<span> Female</span><br />
        @Html.RadioButton("Gender", "Other")<span> Other</span><br />
        <br /><br />

        <button type="submit">Submit</button>

    }
    @if (@ViewBag.Details != null)
    {
        @ViewBag.Nm<br />
        @ViewBag.Email<br />
        @ViewBag.Pwd<br />
        @ViewBag.Phn<br />
        @ViewBag.Gender<br />
        @ViewBag.Langs<br />
    }
    <br />
</div>
